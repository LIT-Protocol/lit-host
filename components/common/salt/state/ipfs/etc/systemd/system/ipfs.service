[Unit]
Description=IPFS Daemon
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
Type=simple
ExecStart=/usr/local/bin/ipfs daemon --init --migrate --enable-gc
User=ipfs
Restart=on-failure
RestartSec=30
StartLimitInterval=60
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
